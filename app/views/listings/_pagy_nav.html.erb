<% link = pagy_link_proc(pagy) -%>
<%#                            -%><nav class="pagy_nav pagination space-x-4" role="navigation">
<% if pagy.prev                -%>  <span class="page prev"><%== link.call(pagy.prev, "Previous", 'class="text-indigo-400 hover:text-indigo-600"') %></span>
<% else                        -%>  <span class="page prev text-gray-300">Previous</span>
<% end                         -%>
<% pagy.series.each do |item| # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36] -%>
<%   if    item.is_a?(Integer) -%>  <span class="page"><%== link.call(item, item, 'class="text-indigo-400 hover:text-indigo-600"') %></span>
<%   elsif item.is_a?(String)  -%>  <span class="page font-bold"><%= item %></span>
<%   elsif item == :gap        -%>  <span class="page text-gray-400">â€¦</span>
<%   end                       -%>
<% end                         -%>
<% if pagy.next                -%>  <span class="page next"><%== link.call(pagy.next, "Next", 'class="text-indigo-400 hover:text-indigo-600"') %></span>
<% else                        -%>  <span class="page next text-gray-300">Next</span>
<% end                         -%>
<%#                            -%></nav>
